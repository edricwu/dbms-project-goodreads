<style>

  .mycustom-jumbotron{
    padding-top: -176px;
    margin-top: 0;
    background: #b3b3b3;
    padding-bottom: -176px;
  }

  .header {
    padding-top: 170px;
    padding-bottom: 170px;
    text-align: center;
    background: #b3b3b3;
    color: rgb(255, 255, 255);
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("book2.jpg");
    background-size: cover;
    background-position-y: -80px;
  }

  .header h1 {
    font-size: 60px;
  }

  .topnav {
    overflow: hidden;
    background-color: rgb(150, 150, 150);
    position: sticky;
    position: -webkit-sticky;
    top: 0;
    padding-bottom: -4px;
    font-size: 18px;
    font: bold;
    z-index: 2; 
    font-family: Helvetica,
  }

  .topnav a {
    float: left;
    display: block;
    color: white;
    text-align: center;
    padding: 14px 20px;
    text-decoration: none;
  }

  .topnav a.right {
    float: right;
  }

  .topnav a:hover {
    background-color: #ddd;
    color: black;
  }

  .topnav a.active {
    background-color: rgb(85, 85, 85);
    color: white;
  }

  .topnav .search-container {
    float: right;
  }

  .topnav .search-container input[type=text] {
    padding: 6px;
    margin-top: 8px;
    font-size: 17px;
    border: none;
  }

  .topnav .search-container button {
    float: right;
    padding: 6px 10px;
    margin-top: 8px;
    margin-right: 16px;
    background: #ddd;
    font-size: 17px;
    border: none;
    cursor: pointer;
  }

  .topnav .search-container button:hover {
    background: #ccc;
  }

  @media screen and (max-width: 600px) {
    .topnav {
      float: none;
    }
    .topnav .search-container {
      float: none;
    }
    .topnav a, .topnav .right, .topnav input[type=text], .topnav .search-container button {
      float: none;
      display: block;
      text-align: left;
      width: 100%;
      margin: 0;
      padding: 14px;
    }
    .topnav input[type=text] {
      border: 1px solid #ccc;  
    }
  }

  .topnav .modal input[type=text], .topnav .modal input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }

  .topnav .modal-container-top button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
  }

  .topnav .modal-container-bottom button {
    background-color: rgb(255, 0, 0);
    color: white;
    padding: 14px 14px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 15%;
  }

  .topnav .modal-container-bottom-signup button {
    background-color: rgb(255, 0, 0);
    color: white;
    padding: 14px 14px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
  }

  button:hover {
    opacity: 0.8;
    background-color: #5bbdffa4;
  }

  .cancelbtn {
    border: none;
    width: auto;
    background-color: #f44336;
    color: #ddd;
  }


  .modal-imgcontainer {
    text-align: center;
    margin: 15px 0 0px 0;
    position: relative;
  }

  img.modal-avatar {
    width: 30%;
    border-radius: 30%;
  }

  .modal-container-top {
    padding: 5px 16px 16px 16px;
  }

  .modal-container-bottom {
    padding: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
  }

  .modal .psw a {
    float: right;
    color: blue;
    block-size: none;
    text-align: center;
    text-decoration: none;
    padding-left: 5px;
  }

  .modal .psw  a:hover {
    background: none;
  }

  .psw a{
    padding-top: 0px;
  }

  span.psw {
    float: right;
    padding-top: 16px;
  }

  .modal .terms a {
    float: right;
    color: blue;
    block-size: none;
    text-align: center;
    text-decoration: none;
    padding-left: none;
    margin-left: none;
  }

  .modal .terms  a:hover {
    background: none;
  }

  .terms a{
    padding-top: 0px;
  }

  .modal {
    display: none;
    position: fixed; 
    z-index: 2; 
    left: 0;
    top: 0;
    width: 100%; 
    height: 100%; 
    overflow: auto; 
    background-color: rgb(0,0,0); 
    background-color: rgba(0,0,0,0.4); 
    padding-top: 60px;
  }

  .modal-content {
    background-color: #fefefe;
    z-index: 2; 
    margin: 5% auto 15% auto; 
    border: 1px solid #888;
    width: 40%; 
  }

  .modal-close {
    position: absolute;
    right: 25px;
    top: 0;
    color: #000;
    font-size: 35px;
    font-weight: bold;
  }

  .modal-close:hover, .modal-close:focus {
    color: red;
    cursor: pointer;
  }

  .modal-animate {
    -webkit-animation: animatezoom 0.6s;
    animation: animatezoom 0.6s
  }

  @-webkit-keyframes animatezoom {
    from {-webkit-transform: scale(0)} 
    to {-webkit-transform: scale(1)}
  }
    
  @keyframes animatezoom {
    from {transform: scale(0)} 
    to {transform: scale(1)}
  }

  @media screen and (max-width: 300px) {
    span.psw {
      display: block;
      float: none;
    }
    .cancelbtn {
      width: 100%;
    }

  .a {
    color: black;
  }

  .footer  {
    clear: both; 
    background: #b3b3b3;
  }

  h1, h2, h3 {
    margin: 0;
  }

  @media screen and (max-width: 700px) {
    .row {   
      flex-direction: column;
    }
  }

  @media screen and (max-width: 400px) {
    .topnav a {
      float: none;
      width: 100%;
    }
  }    
}

</style>

