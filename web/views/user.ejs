<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <% include partials/head %>
    <div>

        <hr>
        <div class="col text-center">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addbookModal">Add
                Book</button>
        </div>
        <hr>
        <div class="modal fade" id="addbookModal" tabindex="-1" role="dialog" aria-labelledby="addbookModalLabel"
            aria-hidden="true" style="z-index: 100000000000">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addbookModalLabel">Please fill in the book details below:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/addbook" method="POST">
                            <div class="form-group">
                                <label for="description" class="col-form-label"><strong>Description:</strong></label>
                                <input type="text" class="form-control" id="description" name="description">
                            </div>
                            <div class="form-group">
                                <label for="price" class="col-form-label"><strong>Price:</strong></label>
                                <input type="text" class="form-control" id="price" name="price">
                            </div>
                            <div class="form-group">
                                <label class="file-upload-container" for="file-upload"><strong>Select an Image:</strong></label><br>
                                <input id="file-upload" type="file"><br><br>
                                <input id="bookimage" type="hidden" name="bookimage" value="Waiting..." />
                               <img src="" id="img-preview" />
                            
                                
                                    
                                    
                                    
                                

                                <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

                                <script>

                                    var CLOUDINARY_URL = "https://api.cloudinary.com/v1_1/kundandalmia/upload";
                                    var CLOUDINARY_UPLOAD_PRESET = "w9kd5wxa";

                                    var imgPreview = document.getElementById('img-preview');
                                    var fileUpload = document.getElementById('file-upload');
                                    var image_url;

                                    fileUpload.addEventListener('change', function (event) {
                                        var file = event.target.files[0];
                                        var formData = new FormData();
                                        formData.append('file', file);
                                        formData.append('upload_preset', CLOUDINARY_UPLOAD_PRESET);



                                        axios({
                                            url: CLOUDINARY_URL,
                                            method: 'POST',
                                            headers: {
                                                'Content-Type': 'application/x-www-form-urlencoded'
                                            },
                                            data: formData
                                        }).then(function (res) {
                                            console.log(res);
                                            imgPreview.src = res.data.secure_url;
                                            image_url = res.data.secure_url;
                                            document.getElementById("bookimage").value = image_url;
                                            console.log("Image uploaded",image_url);


                                        }).catch(function (err) {
                                            console.error(err);

                                        });
                                    });

                                </script>

                            </div>
                            
                            <div class = "form-group">

                            
                                    <label for="categories" class="col-form-label"><strong>Categories:</strong></label>
                                    <div class="checkbox">
                                            <label><input name="book" type="checkbox" value="CookBooks"> Cook Books</label>
                                        </div>
                                        <div class="checkbox">
                                            <label><input name="book" type="checkbox" value="Business&Money"> Business & Money</label>
                                        </div>
                                        <div class="checkbox">
                                            <label><input name="book" type="checkbox" value="Literature&Fiction"> Literature & Fiction</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="MedicalBooks">Medical Books</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="Reference"> Reference</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="Self-Help"> Self-Help</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="Science&Math"> Science & Math</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="KindleAccessories"> Kindle Accessories</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="KindleeBooks"> Kindle eBooks</label>
                                        </div>
                                        <div class="checkbox">
                                                <label><input name="book" type="checkbox" value="KindleShortReads"> Kindle Short Reads</label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Submit</button>


                                
                           
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        
                    </div>
                </div>
            </div>
        </div>
        <h1 class="text-center bg-light mb-3">Books Reviewed</h1>
        <% data.book_data.forEach(function(book,i) { %>
        <div class="p-3">
            <div class="row mb-4">
                <div class="col-4">
                    <img src="<%= book.imUrl %>">
                </div>
                <div class="col">
                    <dl class="row pt-3">
                        <dt class="col-sm-3">Book ID</dt>
                        <dd class="col-sm-8"><a href="/book/<%= book.asin %>"><%= book.asin %></a></dd>
                        <dt class="col-sm-3">Summary:</dt>
                        <dd class="col-sm-8"><b><%= data.user_data[i].summary %></b></dd>
                        <dt class="col-sm-3">Review:</dt>
                        <dd class="col-sm-8"><%= data.user_data[i].reviewText %></dd>
                        <dt class="col-sm-3">Rating:</dt>
                        <dd class="col-sm-8">
                            <% for (j=0; j < data.user_data[i].overall; j++) { %>
                            <i class="text-warning fa fa-star"></i>
                            <% } %>
                            <% for (j=0; j < 5 - data.user_data[i].overall; j++) { %>
                            <i class="text-dark fa fa-star"></i>
                            <% } %>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <hr>
        <% }); %>
    </div>
    <% include partials/footer %>
</body>
<% include partials/bootstrap-script %>

</html>